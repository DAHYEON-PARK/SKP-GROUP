<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true" 
    android:background="#00000000">

    <ImageView
        android:id="@+id/order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/order_contentDescription"
        android:src="@drawable/order_header" />

    <ImageButton
        android:id="@+id/order_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:contentDescription="@string/order_contentDescription"
        android:src="@drawable/order_button_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_header" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/order_contentDescription"
                android:src="@drawable/order_header_second" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_bacon" />

                    <ImageButton
                        android:id="@+id/order_ingredient_bacon_minus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_bacon_minus" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/order_contentDescription"
                            android:src="@drawable/order_ingredient_bacon_blank" />

                        <EditText
                            android:id="@+id/order_ingredient_bacon_edittext"
                            android:labelFor="@+id/order_ingredient_bacon_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="30sp" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/order_ingredient_bacon_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_bacon_plus" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_egg" />

                    <ImageButton
                        android:id="@+id/order_ingredient_egg_minus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_egg_minus" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/order_contentDescription"
                            android:src="@drawable/order_ingredient_egg_blank" />

                        <EditText
                            android:id="@+id/order_ingredient_egg_edittext"
                            android:labelFor="@+id/order_ingredient_egg_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="30sp" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/order_ingredient_egg_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_egg_plus" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_pudding" />

                    <ImageButton
                        android:id="@+id/order_ingredient_pudding_minus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_pudding_minus" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/order_contentDescription"
                            android:src="@drawable/order_ingredient_pudding_blank" />

                        <EditText
                            android:id="@+id/order_ingredient_pudding_edittext"
                            android:labelFor="@+id/order_ingredient_pudding_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="30sp" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/order_ingredient_pudding_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_pudding_plus" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_vegetable" />

                    <ImageView
                        android:id="@+id/order_ingredient_vegetable_minus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_vegetable_minus" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/order_contentDescription"
                            android:src="@drawable/order_ingredient_vegetable_blank" />

                        <EditText
                            android:id="@+id/order_ingredient_vegetable_edittext"
                            android:labelFor="@+id/order_ingredient_vegetable_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="30sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/order_ingredient_vegetable_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/order_contentDescription"
                        android:src="@drawable/order_ingredient_vegetable_plus" />
                </TableRow>
            </TableLayout>

            <ImageButton
                android:id="@+id/order_button_add_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/order_contentDescription"
                android:src="@drawable/order_button_add_other" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/order_contentDescription"
                    android:src="@drawable/order_text_won" />

                <ImageButton
                    android:id="@+id/order_button_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:contentDescription="@string/order_contentDescription"
                    android:src="@drawable/order_button_ok_selector" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>